<div class="container">
 <div class="row">
   <div class="col">
　　<div class="material">
     <p>素材から探す</p>
     <p><%= link_to">K18",search_item_path(:material["K18"]) %></p>
     <p><%= link_to">K18PG",search_item_path(material: params[:K18PG]) %></p>
     <p><%= link_to">K18WG",search_item_path(material: params["K18WG"]) %></p>
     <p><%= link_to">PT",search_item_path(Post.where(material: params["PT"])) %></p>
     <p>宝石から探す</p>
     <p><%= link_to">ダイヤモンド",search_item_path(Post.where(jewel: params["K18"])) %></p>
     <p><%= link_to">ルビー",search_item_path(Post.where(jewel: params["K18"])) %></p>
     <p><%= link_to">サファイヤ",search_item_path(Post.where(jewel: params["K18"])) %></p>
     <p><%= link_to">パール",search_item_path(Post.where(jewel: params["K18"])) %></p>
    </div>

    <div id="container">
      <div id="theTarget">
        <div class="image1"></div>
        <div class="image2"></div>
        <div class="image3"></div>
        <div class="image4"></div>
        <div class="image5"></div>
      </div>
    </div>

   </div>

  <div class="col-md-9 mx-auto mt-5">

    <div class="item mt-5 mw-auto">
       <h4>アイテムから探す</h4>
        <%= form_with url: search_item_path, method: :get, local: true do |f| %>
         <div class="item mb-3 mt-3">
          <%= f.select :item, {'リング': 'リング', 'ネックレス': 'ネックレス', 'ピアス': 'ピアス', 'ブレスレット': 'ブレスレット', 'アンクレット': 'アンクレット', 'ブローチ': 'ブローチ'}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
         </div>
          <%= f.submit '検索', class: 'btn btn-primary'  %>
        <% end %>

     </div>

    <h3 class="title-border font mt-5"><strong>新着</strong></h3>
    <!-- 商品を4つ表示するようにする -->
    <div class="col-xs-offset-3 ">
      <div class="item--card-content d-flex align-items-start">
        <% @posts.last(4).each do |post| %>
          <div class="col-xs-3 offset-md-3 mx-auto" style="padding-right: 20px; padding-left: 20px;">
            <%= link_to post_path(post.id) ,style: "color: black;", data: {"turbolinks" => false}, class: 'text-decoration-none img-wrap' do %>
            　　　<% if post.post_images.count > 0 %>
            　 　 <div class="img_wrap">
            　 　   <img>
                    <%= image_tag post.post_images.first.variant(resize: "200x200").processed %><br>
                  </img>
                 </div>
                <% end %>
              <!--< attachment_image_tag post, :post_image, :fill,200,200, format: 'jpeg',fallback: "no_image.jpg", class: 'card-img-top item-target' %>-->
              <p><%= post.title %></p>
              <p class="text-dark"><%= post.item %></p>
            <% end %>
          </div>
        <% end %>
      <div>
    </div>
  </div>
      <div class="mt-3">
        <p><%= link_to "もっと見る>", posts_path, class: 'btn btn-outline-info' %></p>
      </div>
      <%= link_to "お問い合わせ", inquiry_index_path %>
 </div>
</div>
