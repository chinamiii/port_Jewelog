<div class="container ">
  <div class="row">

    <div class="col-md-5 mx-auto mt-3">

       <h2>プロフィール編集</h2>
        <%= render 'layouts/error_form', model: @user %>

      <%= form_with model:@user, local:true do |f| %>

       <div class="form-group mb-3">
            <%= f.label "名前" %>
            <%= f.text_field :name, class:"form-control" %>
       </div>

          <div class="form-groupe mb-3">
             <%= f.label "アイコン写真" %>
             <%= f.attachment_field :profile_image, placeholder: "プロフィール画像",class:"form-control-file" %>
          </div>

            <div class="form-group mb-3">
              <%= f.label "一言" %>
              <%= f.text_field :introduction, class:"form-control" %>
            </div>

               <div class="actions mb-3">
                  <%= f.submit "これでOK!", class:"btn btn btn-secondary" %>
               </div>


      <% end %>
    </div>
  </div>
</div>