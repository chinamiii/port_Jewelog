<div class="container mt-3">
  <div class="row">

    <div class="col-md-10 mx-auto">


        <h2>ユーザー</h2>
        <% if @users.exists? %>

             <div class="item_container">
                <% @users.each do |user| %>

                 <div class="item mt-5">
                   <%= attachment_image_tag user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "80x80" %>

                   <p><%= user.name %></p>
                   <p>投稿数 <%= user.posts.count %>件</p>

                   <p>ファンの数 <%= user.followers.count %>人</p>

                   <p><%= link_to "プロフィール",user_path(user), class:"btn btn-outline-secondary btn-sm" %></p>
                 </div>


                <% end %>
              </div>

        <% else %>
          <p>ユーザーはいません</p>
        <% end %>

    </div>
  </div>
</div>