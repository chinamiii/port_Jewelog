<div class="container mt-3">
  <div class="row">

    <div class="col-md-10">


        <h2>ユーザー</h2>

        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>名前</th>
              <th>お気に入りされた数</th>
              <th colspan="3"></th>
            </tr>
          </thead>

              <tbody>

                <% @users.each do |user| %>
                 <tr>

                   <td><%= attachment_image_tag user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "50x50" %></td>

                   <td><%= user.name %></td>

                   <td><%= user.followers.count %>人</td>

                   <td><%= link_to "プロフィールを見る",user_path(user) %></td>

                 </tr>
                <% end %>
              </tbody>
          </table>
    </div>
  </div>
</div>