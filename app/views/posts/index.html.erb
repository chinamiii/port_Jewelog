<div class="container mt-3">
  <div class="row">

    <div class="col-md-10 mx-auto">

        <h2>投稿一覧</h2>
              <div class="item_container">
                <% @posts.each do |post| %>
                  <div class="item">
                    <%= link_to post_path(post.id) do %>
                     <%= attachment_image_tag post, :post_image, format: "jpeg", fallback: "no_image.jpg", size: "200x200" %>
                     <p><%= post.title %></p>
                    <% end %>
                  </div>

                <% end %>
              </div>

    </div>
  </div>
</div>